<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BoleBiljart.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BoleBiljart"
    xmlns:pages="clr-namespace:BoleBiljart.Pages"
    xmlns:vm="clr-namespace:BoleBiljart.ViewModels"
    Title="BoleBiljart"
    FlyoutBehavior="Disabled">
    <ShellContent Route="Login" Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate pages:LoginPage}"/>
    <ShellContent Route="Register" Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate pages:RegisterPage}"/>
    <ShellContent Route="GameHistory" Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate pages:GameHistoryPage}"/>
    <ShellContent Route="GameEditor" Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate pages:GameEditorPage}"/>
    <ShellContent Route="UserStats" Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate pages:UserStatsPage}"/>
</Shell>